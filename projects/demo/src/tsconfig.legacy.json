{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": "off"
  },
  "typeRoots": [
    "../node_modules/@types"
  ],
  "plugins": [
    { "name": "@angular/language-service" }
  ]
}
